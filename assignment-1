1) Menu-driven array operations (create, display, insert, delete, linear search)
#include <bits/stdc++.h>
using namespace std;
int main(){
 vector<int> arr;
 while(true){
 cout<<"1.CREATE 2.DISPLAY 3.INSERT 4.DELETE 5.LINEAR SEARCH 6.EXIT\n";
 int ch; if(!(cin>>ch)) return 0;
 if(ch==1){ int n; cin>>n; arr.resize(n); for(int i=0;i<n;i++) cin>>arr[i]; }
 else if(ch==2){ for(int x:arr) cout<<x<<" "; cout<<"\n"; }
 else if(ch==3){ int pos,val; cin>>pos>>val; if(pos<0||pos>arr.size()) arr.push_back(val);
else arr.insert(arr.begin()+pos,val); }
 else if(ch==4){ int pos; cin>>pos; if(pos>=0&&pos<arr.size()) arr.erase(arr.begin()+pos); }
 else if(ch==5){ int key; cin>>key; auto it=find(arr.begin(),arr.end(),key);
cout<<(it==arr.end()?-1:int(it-arr.begin()))<<"\n"; }
 else break;
 }
 return 0;
}
2) Remove duplicates (in-place)
#include <bits/stdc++.h>
using namespace std;
vector<int> remove_dups(vector<int> a){
 unordered_set<int> s; vector<int> res;
 for(int x:a) if(!s.count(x)){ s.insert(x); res.push_back(x); }
 return res;
}
int main(){ vector<int> a={1,2,2,3,1,4}; auto b=remove_dups(a); for(int x:b) cout<<x<<" ";
cout<<"\n"; }
