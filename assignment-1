Code:
int arr[5] = {1}; initializes arr[0]=1 and rest zeros => output: 10000
4) Array and Matrix operations (reverse, multiplication, transpose)
// reverse array
void reverse_arr(vector<int>& a){
 int i=0,j=a.size()-1; while(i<j) swap(a[i++],a[j--]);
}
// matrix multiplication (A m x p, B p x n)
vector<vector<int>> multiply(const vector<vector<int>>& A,const vector<vector<int>>& B){
 int m=A.size(), p=A[0].size(), n=B[0].size();
 vector<vector<int>> C(m, vector<int>(n,0));
 for(int i=0;i<m;i++) for(int k=0;k<p;k++) for(int j=0;j<n;j++) C[i][j]+=A[i][k]*B[k][j];
 return C;
}
// transpose
vector<vector<int>> transpose(const vector<vector<int>>& M){
int r=M.size(), c=M[0].size();
 vector<vector<int>> T(c, vector<int>(r));
 for(int i=0;i<r;i++) for(int j=0;j<c;j++) T[j][i]=M[i][j];
 return T;
}
5) Sum of every row and column
pair<vector<int>,vector<int>> row_col_sum(const vector<vector<int>>& M){
 int r=M.size(), c=M[0].size();
 vector<int> row(r,0), col(c,0);
 for(int i=0;i<r;i++) for(int j=0;j<c;j++){ row[i]+=M[i][j]; col[j]+=M[i][j]; }
